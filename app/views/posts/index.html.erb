<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= react_component('PostGraph', { stats: @stats, total: @total, width: 500, height: 500 })  %>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Content</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.topic %></td>
        <td><%= post.content %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
